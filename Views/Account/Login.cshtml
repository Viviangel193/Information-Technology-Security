@model SampleSecureWeb.ViewModel.LoginViewModel

<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                Registration
            </div>
            <div class="card-body">
                @if(ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
                <form asp-action="Login">
                    <input type="hidden" asp-for="ReturnUrl"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <input asp-for="UserName" class="form-control form-control-user" placeholder="Enter Username" />
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Enter Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="RememberLogin" class="form-check-label">
                        <input asp-for="RememberLogin" class="form-check-input">
                        <strong>Remember Me</strong>
                        </label>
                    </div>
                    <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-user btn-block" value="Login"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_validationScriptsPartial");
    }
}